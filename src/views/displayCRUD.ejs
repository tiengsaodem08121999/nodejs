<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        .pointer {
            cursor: pointer;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/8fb79d31f1.js" crossorigin="anonymous"></script>
</head>

<body>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col" class="text-center">Email</th>
                <th scope="col" class="text-center">First</th>
                <th scope="col" class="text-center">Last</th>
                <th scope="col" class="text-center">Address</th>
                <th scope="col" class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i=0; i < dataTable.length; i++){ %>
                <tr>
                    <th scope="row" class="text-center">
                        <%= dataTable[i].email %>
                    </th>
                    <td class="text-center">
                        <%= dataTable[i].firstName %>
                    </td>
                    <td class="text-center">
                        <%= dataTable[i].lastName %>
                    </td>
                    <td class="text-center">
                        <%= dataTable[i].address %>
                    </td>
                    <td class="flex text-center">
                        <a href="/delete-crud?id=<%= dataTable[i].id%>">
                            <i class="fa-solid fa-trash me-3 pointer"></i>
                        </a>
                        <a href="/edit-crud?id=<%= dataTable[i].id%>">
                            <i class="fa-solid fa-pen-to-square pointer"></i>
                        </a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
</body>

</html>